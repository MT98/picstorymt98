<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>picstories</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>accueil.jsp</welcome-file>
  </welcome-file-list>
  <filter>
  	<filter-name>AuthenticationFilter</filter-name>
  	<filter-class>filter.AuthenticationFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>RightFilter</filter-name>
  	<filter-class>filter.RightFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>NotAdminFilter</filter-name>
  	<filter-class>filter.NotAdminFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthenticationFilter</filter-name>
  	<url-pattern>/user/*</url-pattern>
  	<url-pattern>/images/*</url-pattern>
  	<url-pattern>/albums/add</url-pattern>
  	<url-pattern>/albums/delete</url-pattern>
 
  </filter-mapping>
  <filter-mapping>
  	<filter-name>RightFilter</filter-name>
  	<url-pattern>/user/profil</url-pattern>
  	<url-pattern>/albums/add</url-pattern>
  	<url-pattern>/albums/delete</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>NotAdminFilter</filter-name>
  	<url-pattern>/user/list</url-pattern>
  	<url-pattern>/user/add</url-pattern>
  	<url-pattern>/user/delete</url-pattern>
  	<url-pattern>/user/view</url-pattern>
  	<url-pattern>/user/modify</url-pattern>
  </filter-mapping>
</web-app>